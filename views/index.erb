<!DOCTYPE html>

<header>
  <% if session[:message] %>
    <%= session.delete(:message) %>
  <% end %>
</header>

<ul><% @files.each do |file| %>
    <br><li>
      <a method="get" href="/<%= file %>"><%= file %></a>
      <form class="inline" method="get" action="/<%= file %>/edit">
        <button type="submit">Edit</button>
      </form>
      <form class="inline" method="post" action="/delete/<%= file %>">
        <button type="submit">Delete</button>
      </form>

    </li>
    <% end %>
  </ul>

<p><a href="/new">New Document</a></p>

<% if session[:username] %>
  <form method="post" action="/users/signout">
    <p class="user-status">
      Signed in as <%= session[:username] %>.
      <button type="submit">Sign Out</button>
    </p>
  </form>
<% else %>
  <p class="user-status"><a href="/users/signin">Sign In</a></p>
<% end %>
